@model RecipesPlus.Web.ViewModels.Recipes.RecipesListViewModel

@{
    this.ViewData["Title"] = "Всички рецепти";
}

<h1>@this.ViewData["Title"]</h1>

<hr />

<div class="row">
    @foreach (var recipe in this.Model.Recipes)
    {
        <div class="media col-md-4">
            <img src=@recipe.ImageUrl class="mr-3" alt="...">
            <div class="media-body">
                <h5 class="mt-0">@recipe.Name</h5>
                <p>@recipe.CategoryName</p>
            </div>
        </div>
    }
</div>

<hr />

<partial name="_PagingPartial" model="@Model" />